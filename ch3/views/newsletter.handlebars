<h2> 注册获取信息</h2>
<div class="formContainer">
    <form class="form-horizontal" role="form" action="/process?form=newsletter" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="form-group">
            <label for="fieldName" class="col-ms-2 control-label">姓名</label>
            <div class="col-ms-4">
                <input type="text" class="form-control" id="fieldName" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-ms-2 control-label">邮箱</label>
            <div class="col-ms-4">
                <input type="text" class="form-control" required id="fieldName" name="email">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-ms-4">
                <button type="submit" class="btn btn-default">注册</button>
            </div>
        </div>
    </form>
</div>


{{#section 'jquery'}}
<script>
    $(document).ready(function () {
        $('.newsletterForm').on('submit', function (evt) {
            evt.preventDefault();
            var action = $(this).attr('action');
            var $container = $(this).closest('.formContainer');
            $.ajax({
                url: action,
                type: 'POST',
                success: function (data) {
                    if (data.success) {
                        $container.html('<h2>Thank you!</h2>');
                    } else {
                        $container.html('There was a problem.');
                    }
                },
                error: function () {
                    $container.html('There was a problem.');
                }
            });
        });
    });
</script>
{{/section}}